<%= link_to 'Back', post_definitions_path, { class: 'btn btn-secondary', style: 'margin-bottom: 30px'} %>
<hr/>

<h3>New Post Definition</h3>

<%= form_for @post do |f| %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control"%>
    </div>

    <%= f.submit class: 'btn btn-secondary' %>

<% end %>